{
    "$schema": "http://json.schemastore.org/prettierrc",
    "singleQuote": true,
    "endOfLine": "auto",
    "semi": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 120,
                "useTabs": false,
                "trailingComma": "none",
                "arrowParens": "avoid",
                "proseWrap": "never"
            }
        },
        {
            "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
            "options": {
                "useTabs": false
            }
        }
    ]
}
